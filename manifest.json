{
  "manifest_version": 3,
  "name": "UltraLinq AI Report Helper",
  "version": "2.0",
  "description": "Adds an on-page button to draft AI reports from UltraLinq studies.",
  "permissions": [
    "debugger",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "*://*.ultralinq.net/*",
    "*://*.ultralinq.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Draft Gemini Report",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["preview.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.ultralinq.com/*",
        "*://*.ultralinq.net/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}

